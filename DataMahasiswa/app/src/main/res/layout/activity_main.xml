<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nim" />

            <EditText
                android:id="@+id/inp_nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="" />

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nama" />

            <EditText
                android:id="@+id/inp_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email" />

            <EditText
                android:id="@+id/inp_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="" />

            <TextView
                android:id="@+id/txt_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hp" />

            <EditText
                android:id="@+id/inp_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:text="" />

            <Button
                android:id="@+id/tbn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_simpan" />

            <Button
                android:id="@+id/tbn_hapus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_hapus" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTampilData"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>